{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Specification of output",
  "description": "Specification of some parameters of the simulation",
  "type": "object",
  "properties": {
    "output_path": {
      "description": "Path where output will be saved",
      "type": "string"
    },
    "output_naming": {
      "description": "Naming prefix for all files",
      "type": "string"
    },
    "selected_output": {
      "description": "Files to generate",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Accumulated execution time",
          "Energy consumption",
          "Execution percentage",
          "Frequency",
          "CPU heat evolution",
          "Cores maximum temperature",
          "Task execution",
          "Processor utilization",
          "Context switch statistics",
          "Execution percentage statistics"
        ]
      },
      "minLength": 1
    }
  },
  "required": [
    "selected_output",
    "output_path",
    "output_naming"
  ],
  "additionalProperties": false
}